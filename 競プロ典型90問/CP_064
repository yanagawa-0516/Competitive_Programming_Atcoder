#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main(){
  int N,Q;
  cin>>N>>Q;
  
  vector<long long> A(N+1);
  vector<long long> d(N+1);
  long long e=0;
  for(int i=1;i<=N;i++) {
    cin>>A[i];
    if(i!=1){
      d[i-1]=A[i]-A[i-1];
      e+=abs(d[i-1]);
    }
  }
  
  for(int iter=0;iter<Q;iter++){
    int L,R;
    long long V;
    cin>>L>>R>>V;
    
    long long e1=abs(d[L-1])+abs(d[R]);
    if(L>=2) d[L-1]+=V;
    if(R<=N-1) d[R]-=V;
    
    long long e2=abs(d[L-1])+abs(d[R]);
    e+=(e2-e1);
    
    cout<<e<<endl;
  }
  
  return 0;
}
